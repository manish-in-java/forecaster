extends layout

block title
  title Inventory Forecast

block scripts
    script(defer="true", src="/script/vue.js")
    script(defer="true", src="/script/forecast.js")

block introduction
        .ui.text.container
          h1.ui.inverted.header Inventory Forecast
          .ui.huge.labels
            .ui.teal.label
              .detail Plan Better
            .ui.olive.label
              .detail Minimize Holding
            .ui.green.label
              .detail Maximize Orders

block content
        .ui.vertical.stripe.segment(id="content")
          .ui.equal.width.stackable.internally.celled.grid.container
            .row
              .column
                form.ui.form(action="/forecast", id="form", method="POST")
                  h4.ui.dividing.header Forecasting
                  p
                    | Provide some data points, such as,
                    | &nbsp;
                    code.ui.label 11, 7, 13, 9, 11, 10
                    | &nbsp;
                    | and choose a forecasting model to see a graph of the forecast
                    | generated by the chosen model.
                  .field.required
                    label Data points
                    input(autofocus="autofocus", id="sampleData", name="sampleData", placeholder="Data points", type="text", value="11, 7, 13, 9, 11, 10")
                  .field.required
                    label Forecasting model
                    select(id="forecastingModel", name="forecastingModel")
                      option(value="NAIVE") Naive
                      option(selected="selected", value="SIMPLE_AVERAGE") Simple Average
                  button.ui.blue.button(id="trigger", role="button", type="button", v-on:click="forecast") Plot
              .column
                .ui.large.error.message(v-if="error")
                  i.close.icon
                  .header Error!
                  p Unable to load forecast.
                #chart
