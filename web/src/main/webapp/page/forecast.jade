extends layout

block title
  title Inventory Forecast

block scripts
    script(src="/script/vue.js")

block introduction
        .ui.text.container
          h1.ui.inverted.header Inventory Forecast
          .ui.huge.labels
            .ui.teal.label
              .detail Plan Better
            .ui.olive.label
              .detail Minimize Holding
            .ui.green.label
              .detail Maximize Orders

block content
        .ui.vertical.stripe.segment
          .ui.equal.width.stackable.internally.celled.grid.container
            .row
              .column
                form.ui.form(method="POST")
                  h4.ui.dividing.header Forecasting
                  p
                    | Provide some data points, such as,
                    | &nbsp;
                    code.ui.label 11, 7, 13, 9, 11, 10
                    | &nbsp;
                    | and choose a forecasting model to see a graph of the forecast
                    | generated by the chosen model.
                  .field.required
                    label Data points
                    input(autofocus="autofocus", id="data", name="data", placeholder="Data points", type="text")
                  .field.required
                    label Forecasting model
                    select(id="model", name="model")
                      option(value="") Choose
                      option(value="NAIVE") Naive
                      option(value="SIMPLE_AVERAGE") Simple Average
                  button.ui.blue.button(type="submit") Plot
              .column
                #chart
